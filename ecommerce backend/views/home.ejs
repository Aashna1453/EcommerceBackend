<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <style>
      .box{
        height:300px;
        width:200px;
        border:2px solid crimson;
      }
      .pr{
        text-decoration: line-through;
      }
      
      #grid {
        justify-content: center;
        display:flex;
        
      }
      #grid div{
        margin-right: 20px;
        
      }
      
    </style>
  </head>
  <body>
    <div id="grid">
    <% results.forEach((result)=>{ %>
    <div class="box">
      <center>
      <a href="details/<%=result.id%>"><h3><%=result.name%></h3></a>
      <h4><%=result.type%></h4>
      <span class="pr"><b><%=result.price%></b></span>
      <span><b><%=result.sale_price%></b></span><br>
      <a href="addtocart/<%=result.id%>"><button type="button" >Add to Cart</button></a>
      <a href="checkout/<%=result.id%>"><button type="button" >BuyNow</button></a>
<center>
    </div>
    <br>
<%})%>
</div>
  </body>
</html>
