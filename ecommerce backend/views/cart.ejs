<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <style>
      
      .box{
        height:300px;
        width:200px;
        border:2px solid crimson;
      }
      .pr{
        text-decoration: line-through;
      }
    
      
      
    </style>
  </head>
  <body>
    
    
    <% results.forEach((result)=>{ %>
    <div class="box">
      <center>
      <a href="details/<%=result.id%>"><h3><%=result.p_name%></h3></a>
      <h4><%=result.type%></h4>
      <span ><b><%=result.p_price%></b></span>
<center>
    </div>
    <br>
<%})%>
<form action="/buyall" method="post" class="form">
  <label for="address">Address:</label>
  <input type="text" id="address" name="addr" placeholder="Enter your address...">
  <select id="payment-type" name="mode">
    <option value="0">Pre-Paid</option>
    <option value="1">Post-Paid</option>
  </select>
  <input type="submit" value="Buy">
</form>
  </body>
</html>
